  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "pnpm db:migrate && nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "start:dev:repl": "nest start --watch -- --entryFile repl",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles",
    "test:e2e:projects": "pnpm test:e2e test/projects/projects.e2e-spec.ts",
    "test:e2e:auth": "pnpm test:e2e test/auth/auth.e2e-spec.ts",
    "test:e2e:dynamic": "pnpm test:e2e --testPathPattern",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "pnpm db:generate && drizzle-kit migrate",
    "db:push": "pnpm db:generate && drizzle-kit push",
    "db:studio": "npx drizzle-kit studio",
    "migrate:run": "npx ts-node src/modules/drizzle/run-migrations.ts",
    "seed": "nest start --entryFile seeder -- seed:usage-test"
  },
