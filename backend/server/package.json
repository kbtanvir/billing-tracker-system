  "jest": {
    "forceExit": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@app/utils(|/.*)$": "<rootDir>/libs/utils/src/$1",
      "^@app/storage(|/.*)$": "<rootDir>/libs/storage/src/$1"
    }
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@nestjs/core",
      "@scarf/scarf",
      "bcrypt",
      "bufferutil",
      "esbuild",
      "msgpackr-extract",
      "nice-napi"
    ],
    "onlyBuiltDependencies": [
